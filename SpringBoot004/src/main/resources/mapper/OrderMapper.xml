<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.OrderMapper">

    <insert id="add">
        insert into `order`(order_name,order_price,order_uid)
        values (#{order1.orderName},#{order1.orderPrice},#{order1.orderUid})
    </insert>

    <delete id="del">
        delete from `order`
        where order_id=#{uid}
    </delete>

    <update id="update">
        update `order`
        set order_name=#{oreer2.orderName},order_price=#{oreer2.orderPrice},order_uid=#{oreer2.orderUid}
        where order_id=#{oreer2.orderId}
    </update>

    <resultMap id="f" type="com.example.pojo.Order">
        <id property="orderId" column="order_id"></id>
        <result property="orderName" column="order_name"></result>
        <result property="orderPrice" column="order_price"></result>
        <result property="orderUid" column="order_uid"></result>
    </resultMap>
    <select id="findById" resultMap="f">
        select *
        from `order`
        where order_id=#{uid}
    </select>

</mapper>